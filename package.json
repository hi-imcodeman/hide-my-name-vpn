{
  "name": "typescript-template",
  "version": "1.1.0",
  "main": "dist/bundle.js",
  "repository": "https://github.com/hi-imcodeman/typescript-template.git",
  "author": "Asraf Ali <asraf.cse@gmail.com>",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "compile": "webpack",
    "docs": "typedoc",
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint . --ext .ts"
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "yarn lint --fix",
      "git add",
      "yarn docs"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn coverage"
    }
  },
  "devDependencies": {
    "@types/jest": "^25.2.3",
    "@typescript-eslint/eslint-plugin": "^3.0.2",
    "@typescript-eslint/parser": "^3.0.2",
    "copy-webpack-plugin": "^6.0.1",
    "eslint": "^7.1.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.7",
    "ts-jest": "^26.0.0",
    "ts-loader": "^7.0.4",
    "typedoc": "^0.17.7",
    "typescript": "^3.9.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "dependencies": {}
}
